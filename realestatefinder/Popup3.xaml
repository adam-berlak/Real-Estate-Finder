                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.553"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="- "/><Run Text="$"/><Run Text="2,900/month"/><LineBreak/><Run Text="- "/><Run Text="600"/><Run Text=" sq ft"/><LineBreak/><Run Text="- "/><Run Text="2 bedrooms, 2 bathrooms"/><LineBreak/><Run Text="- "/><Run Text="Utilities Included: "/><Run Text="Yes"/><LineBreak/><Run Text="- "/><Run Text="Pets: "/><Run Text="Yes"/></TextBlock>
