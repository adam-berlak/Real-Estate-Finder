        xmlns:local="clr-namespace:realestatefinder"
        mc:Ignorable="d"
        Title="Home Details" Height="404.258" Width="525" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="assets\photos\background1.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="293*"/>
            <ColumnDefinition Width="226*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="114*"/>
            <RowDefinition Height="88*"/>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="64,71,0,0" VerticalAlignment="Top" Width="156" Grid.RowSpan="2" Source="assets\photos\a1.jpg"/>
        <Image x:Name="image1" HorizontalAlignment="Left" Height="104" Margin="64,85,0,0" VerticalAlignment="Top" Width="150" Grid.Row="1" Source="assets\photos\map3.png" Grid.RowSpan="3"/>
