        <Button Margin="200,59,56.541,30" Opacity="0.995" Click="buttonClick" Background="Transparent" BorderBrush="Transparent">
            <Image Source="assets\photos\favclicked.png" Stretch="Uniform"/>
        </Button>
        <Button Margin="200,59,56.541,30" ToolTipService.ShowDuration="10000" Click="buttonClick" Background="Transparent" BorderBrush="Transparent">
            <Image Source="assets\photos\fav.png" Stretch="Uniform">
                <Image.ToolTip>
                    <ToolTip>
                        <TextBlock FontWeight="Bold">
                            Press to save listing for later
                        </TextBlock>
                    </ToolTip>
                </Image.ToolTip>
            </Image>
        </Button>
        <Button Margin="55,52,68.541,3" Opacity="0.995" Grid.Row="1" >
            <StackPanel Orientation="Horizontal">
                <Image Source="assets\photos\ContactButton2.png" Stretch="Uniform" Height="47" Width="198"/>
            </StackPanel>
        </Button>
        <Button Margin="56,52,67.541,3" Opacity="0.995" Click="buttonClick" Grid.Row="1" ToolTipService.ShowDuration="5000">
            <Button.ToolTip>
                <ToolTip>
                    <StackPanel>
                        <TextBlock FontWeight="Bold">
                            Press to Contact via Email!
                        </TextBlock>
                        <TextBlock>
                            Opens your default email client.
                        </TextBlock>
                    </StackPanel>
                </ToolTip>
            </Button.ToolTip>
            <StackPanel Orientation="Horizontal">
                <Image Source="assets\photos\ContactButton.png" Stretch="Uniform" Height="47" Width="198"/>
            </StackPanel>
        </Button>
        <Button Margin="200,106,56.541,67" Opacity="0.995" Grid.RowSpan="2" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal">
                <Image Source="assets\photos\arrow0.png" Stretch="Uniform" Height="22" Width="24"/>
            </StackPanel>
        </Button>
        <Button Margin="483,0,0,89" Height="20" Width="20" Click="buttonClick" Background="Transparent" BorderBrush="Transparent">
            <StackPanel Orientation="Horizontal">
                <Image Source="assets\photos\Xbutton.png" Stretch="Uniform"/>
            </StackPanel>

        </Button>
        <Button Margin="47,106,208.541,67" Opacity="0.995" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" Background="Transparent" BorderBrush="Transparent">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <StackPanel Orientation="Horizontal">
                <Image Source="assets\photos\arrow0.png" Stretch="Uniform" Height="22" Width="24"/>
            </StackPanel>
        </Button>
        <Label x:Name="label3" Content="Contact Realtor" HorizontalAlignment="Left" Height="37" Margin="94,56,0,0" Grid.Row="1" VerticalAlignment="Top" Width="93" Grid.RowSpan="2" Foreground="White"/>
        <Label x:Name="label2_Copy" Content="Contact Information:" HorizontalAlignment="Left" Height="36" Margin="230,10,0,0" VerticalAlignment="Top" Width="199" Foreground="#FFCBC7F9" FontFamily="Segoe UI Light" FontSize="18" Grid.Row="2" Grid.ColumnSpan="2"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="250,47,0,-13" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="138" Width="251" Grid.RowSpan="2" FontSize="14" Foreground="#FFE0DDFF" FontFamily="Segoe UI Light" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.553"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="Phone: (403) 5"/><Run Text="43"/><Run Text=" 3"/><Run Text="65"/><Run Text="4"/><LineBreak/><Run Text="E-mail: "/><Run Text="greg"/><Run Text="@remacks.com"/><LineBreak/></TextBlock>
    </Grid>
