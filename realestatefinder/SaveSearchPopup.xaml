<ItemsControl x:Class="realestatefinder.SaveSearchPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:realestatefinder"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <TextBox Margin="8" materialDesign:HintAssist.Hint="Enter a name for your search. (eg. Downtown, Apartments and Condos...)" Background="White" Name="SearchName"></TextBox>
    <DockPanel LastChildFill="False">
        <local:SubscribeButton DockPanel.Dock="Left" Margin="8" Padding="8,0" Click="SubscribeButton_Click" x:Name="SearchSubButton"></local:SubscribeButton>
        <Button DockPanel.Dock="Right" Content="Cancel" Margin="8" Click="Cancel_Click"></Button>
        <Button DockPanel.Dock="Right" Content="Save" Margin="8" Click="Save_Click" Name="SaveButton"></Button>
    </DockPanel>
    <Separator></Separator>
</ItemsControl>
