<Button x:Class="realestatefinder.FilterButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:realestatefinder"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        SnapsToDevicePixels="True"
        Margin="3,3,3,3"
        Padding="4,0"
        Click="FilterButton_Click"
        HorizontalContentAlignment="Left">
    <DockPanel>
        <CheckBox DockPanel.Dock="Left" IsEnabled="False" IsChecked="False" Style="{DynamicResource MaterialDesignActionLightToggleButton}"
                  Height="20" Width="25" HorizontalAlignment="Left" VerticalAlignment="Center" Name="Check"
                  Grid.Column="0">
        </CheckBox>
        <Label DockPanel.Dock="Left" VerticalAlignment="Center" Name="FilterName" Grid.Column="1" Foreground="White"></Label>
    </DockPanel>
</Button>
